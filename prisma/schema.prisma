datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  discord  Discord?
}

model Discord {
  id       Int    @id @default(autoincrement())
  userId   Int    @unique
  avatar   String?
  user     User   @relation(fields: [userId], references: [id])
}
